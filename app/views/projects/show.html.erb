<h2>Project: <%=h @project.name %></h2>

<h3>Description</h3>
<pre>
  <%=h @project.description %>
</pre>

<h3>Details</h3>
<table>
    <tr>
        <th>Start date</td>
        <td><%=h @project.start_date %></td>
    </tr>
    <tr>
        <th>Finish date</td>
        <td><%=h @project.end_date %></td>
    </tr>
    <tr>
        <th>Est. Start date</td>
        <td><%=h @project.start_date %></td>
    </tr>
    <tr>
        <th>Est. Finish date</td>
        <td><%=h @project.end_date %></td>
    </tr>
    <tr>
        <th>Creation date</td>
        <td><%=h @project.creation_date %></td>
    </tr>
</table>

<h3>Tasks</h3>

<table>
	<tr>
		<th>Title</th>
		<th>Owner</th>
		<th>Start Date</th>
		<th>Finish Date</th>
		<th>Est. Start Date</th>
		<th>Est. Finish Date</th>
		<th>Duration</th>
		<th>Est. Duration</th>
	</tr>

	<% for task in @project.tasks %>
		<tr>
			<td><%= link_to task.title, task %></td>
			<td><%=h task.owner ? task.owner.name : '-' %></td>
			<td><%=h task.start_date %></td>
			<td><%=h task.finish_date %></td>
			<td><%=h task.estimated_start_date %></td>
			<td><%=h task.estimated_finish_date %></td>
			<td><%=h task.duration%></td>
			<td><%=h task.estimated_duration %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
