<h1>New project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :estimated_start_date %><br />
    <%= f.date_select :estimated_start_date %>
  </p>
  <p>
    <%= f.label :estimated_finish_date %><br />
    <%= f.date_select :estimated_finish_date %>
  </p>
  <p>
    <%= f.label :creation_date %><br />
    <%= f.date_select :creation_date %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>