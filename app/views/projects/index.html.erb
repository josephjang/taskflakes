<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Estimated start date</th>
    <th>Estimated finish date</th>
    <th>Creation date</th>
  </tr>

<% @inactive_projects.each do |project| %>
