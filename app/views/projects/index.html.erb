    </td>
    <td><%= link_to project.name, project %></td>
    <td><%=h project.start_date %></td>
    <td><%=h project.end_date %></td>
    <td><%=h project.estimated_start_date %></td>
    <td><%=h project.estimated_finish_date %></td>
    <td><%=h project.creation_date %></td>
  </tr>
<% end %>
</table>
