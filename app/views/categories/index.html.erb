<h1>Listing categories</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to image_tag('vaga/file_edit.png', :border => 0), edit_category_path(category) %>
    <% if current_user.manager? %>
    <%= link_to image_tag('vaga/file_delete.png', :border => 0), category, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
    <td><%= link_to category.name, category %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_category_path %>
