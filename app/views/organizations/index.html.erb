<h2>Organizations</h2>

<%= link_to image_tag('vaga/file_add.png', :border => 0), new_organization_path %>

<br />

<table>
  <tr>
    <th></th>
    <th>Name</th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
      <td>
          <%= link_to image_tag('vaga/file_edit.png', :border => 0), edit_organization_path(organization) %>
        <% if current_user.manager? %>
          <%= link_to image_tag('vaga/file_delete.png', :border => 0), :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </td>
    <td><%=h organization.name %></td>
  </tr>
<% end %>
</table>

<br />

