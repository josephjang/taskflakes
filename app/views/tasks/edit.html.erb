<h1>Editing task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
  <b>Title</b><br />
  <%= f. text_field :title %>
  </p>
  <p>
  <b>Description</b><br />
  <%= f. text_area :description %>
  </p>
  <p>
  <b>Owner</b><br />
  <%= f. text_field :owner %>
  </p>
  <p>
  <b>Project</b><br />
  <%= f. text_field :project%>
  </p>
  <p>
  <b>Start Date</b><br />
  <%= f. date_select :start_date, :include_blank => true %>
  </p>
  <p>
  <b>Finish Date</b><br />
  <%= f. date_select :finish_date, :include_blank => true %>
  </p>
  <p>
  <b>Est. Start Date</b><br />
  <%= f. date_select :estimated_start_date, :include_blank => true %>
  </p>
  <p>
  <b>Est. Finish Date</b><br />
  <%= f. date_select :estimated_finish_date, :include_blank => true %>
  </p>
  <p>
  <b>Duration</b><br />
  <%= f. text_field :duration %>
  </p>
  <p>
  <b>Est. Duration</b><br />
  <%= f. text_field :estimated_duration %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>
