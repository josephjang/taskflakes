<h1>Listing tasks</h1>

<table>
	<tr>
		<td>Title</td>
		<td>Description</td>
		<td>Owner</td>
		<td>Project</td>
		<td>Start Date</td>
		<td>Finish Date</td>
		<td>Est. Start Date</td>
		<td>Est. Finish Date</td>
		<td>Duration</td>
		<td>Est. Duration</td>
		<td></td>
		<td></td>
		<td></td>
	</tr>

<% @tasks.each do |task| %>
	<tr>
		<td> <%=h task.title %> </td>
		<td> <%=h task.description %> </td>
		<td> <%=h task.owner %> </td>
		<td> <%=h task.project %> </td>
		<td> <%=h task.start_date %> </td>
		<td> <%=h task.finish_date %> </td>
		<td> <%=h task.estimated_start_date %> </td>
		<td> <%=h task.estimated_finish_date %> </td>
		<td> <%=h task.duration %> </td>
		<td> <%=h task.estimated_duration %> </td>
		<td><%= link_to 'Show', task %></td>
		<td><%= link_to 'Edit', edit_task_path(task) %></td>
		<td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

