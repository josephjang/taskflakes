<h1>New task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
  <b>Title</b><br />
  <%= f. text_field :title %>
  </p>
  <p>
  <b>Description</b><br />
  <%= f. text_area :description %>
  </p>
  <p>
  <b>Category</b><br />
  <%= f. select :category_id, Category.find(:all).collect { |c|
	  [c.name, c.id]}, { :include_blank => true } %>
  </p>
  <p>
  <b>Project (Unapproved)</b><br />
  <%= f. text_field :project_name %>
  </p>
  <p>
  <b>Project</b><br />
  <%= f. select :project_id, Project.find(:all).collect { |p|
	  [p.name, p.id]}, { :include_blank => true } %>
  </p>
  <p>
  <b>Status</b><br />
  <%= f. select :status_id, Status.find(:all).collect { |s|
    [s.name, s.id]}, { :include_blank => false } %>
  </p>
  <p>
  <b>Owner</b><br />
  <%= f. select :owner, User.find(:all).collect { |u|
    [u.name, u.name]}, { :include_blank => true } %>
  </p>
  <p>
  <b>Organization</b><br />
  <%= f. text_field :organization %>
  </p>
  <p>
  <b>Start Date</b><br />
  <%= f. date_select :start_date, :include_blank => true %>
  </p>
  <p>
  <b>Finish Date</b><br />
  <%= f. date_select :finish_date, :include_blank => true %>
  </p>
  <p>
  <b>Est. Start Date</b><br />
  <%= f. date_select :estimated_start_date, :include_blank => true %>
  </p>
  <p>
  <b>Est. Finish Date</b><br />
  <%= f. date_select :estimated_finish_date, :include_blank => true %>
  </p>
  <p>
  <b>Duration</b><br />
  <%= f. text_field :duration %>
  </p>
  <p>
  <b>Est. Duration</b><br />
  <%= f. text_field :estimated_duration %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
