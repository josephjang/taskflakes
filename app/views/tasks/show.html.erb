<h1>Showing task #<%=h @task.id %></h1>

<table>
	<tr>
		<td>Title</td>
		<td><%=h @task.title %></td>
	</tr>
	<tr>
		<td>Description</td>
		<td><%=h @task.description %></td>
	</tr>
	<tr>
		<td>Owner</td>
		<td><%=h @task.owner %></td>
	</tr>
	<tr>
		<td>Category</td>
		<td><%= @task.category != nil ? (link_to @task.category.name, @task.category) : 'N/A' %></td>
	</tr>
	<tr>
		<td>Project</td>
		<td><%= @task.project != nil ? (link_to @task.project.name, @task.project) : @task.project_name %></td>
	</tr>
	<tr>
		<td>Status</td>
		<td><%= @task.status.name %></td>
	</tr>
	<tr>
		<td>Owner</td>
		<td><%= @task.owner %></td>
	</tr>
	<tr>
		<td>Organization</td>
		<td><%= @task.organization %></td>
	</tr>
	<tr>
		<td>Start Date</td>
		<td><%=h @task.start_date%></td>
	</tr>
	<tr>
		<td>Finish Date</td>
		<td><%=h @task.finish_date%></td>
	</tr>
	<tr>
		<td>Est. Start Date</td>
		<td><%=h @task.estimated_start_date%></td>
	</tr>
	<tr>
		<td>Est. Finish Date</td>
		<td><%=h @task.estimated_finish_date %></td>
	</tr>
	<tr>
		<td>Duration</td>
		<td><%=h @task.duration%></td>
	</tr>
	<tr>
		<td>Est. Duration</td>
		<td><%=h @task.estimated_duration%></td>
	</tr>
</table>
<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
