<h1>Showing user #<%=h @user.id %></h1>

<table>
	<tr>
		<td>ID</td>
		<td><%=h @user.login %></td>
	</tr>
	<tr>
		<td>Name</td>
		<td><%=h @user.name %></td>
	</tr>
	<tr>
		<td>Email</td>
		<td><%=h @user.email %></td>
	</tr>
	<tr>
		<td>Organization</td>
		<td><%=h @user.organization ? @user.organization.name : 'N/A' %></td>
	</tr>
	<tr>
		<td>Manager</td>
		<td><%= @user.manager %></td>
	</tr>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
